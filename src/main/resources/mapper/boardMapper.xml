<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.joonggo.repository.BoardMapper">

    <insert id="register">
        insert into sellbuy_board(board_name,category,trade_price,board_content)
        values(#{boardName},#{category},#{tradePrice},#{content});
    </insert>

    <select id="getBoardId" resultType="long">
        select max(board_id) from sellbuy_board;
    </select>

    <select id="getList" resultType="com.project.joonggo.domain.BoardVO">
        select * from sellbuy_board order by board_id desc
    </select>
    <select id="getDetail" resultType="com.project.joonggo.domain.BoardVO">
        select * from sellbuy_board where board_id = #{boardId}
    </select>

</mapper>